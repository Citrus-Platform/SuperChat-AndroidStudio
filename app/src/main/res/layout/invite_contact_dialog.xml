<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_login_change_screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#ffe8e3d9" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:gravity="center"
        android:padding="1dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="1dip"
            android:background="#ffe8e3d9"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:layout_centerInParent="true"
                android:background="@color/header_footer_color"
                android:padding="5dip"
                android:layout_marginBottom="15dip"
                android:visibility="visible">

                <TextView
                    android:id="@+id/id_new_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_in_group"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"
                    android:textSize="20sp" 
                    android:textStyle="bold"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/id_new_broad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                    android:text="@string/new_broadcast"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp" 
                    android:visibility="invisible"/>
            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="20dip">
            <com.superchat.widgets.MyriadSemiboldEditText
                android:id="@+id/id_display_name_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="@string/display_ur_name_hint"
                android:inputType="textCapWords"
                android:background="@null"
                android:maxLength="25"
                android:padding="5dip"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_color_grayblack"
                android:textSize="16sp"
                android:layout_weight=".8"
                android:textStyle="normal" />
            </LinearLayout>
	<View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/dark_gray" />
            
            <LinearLayout  android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
		<ImageView android:id="@+id/id_country_flag1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@null" />
		<TextView android:id="@+id/id_country_code1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@null" 
                android:singleLine="true"
                android:text="+91"
                android:textSize="15sp"/>
		<View
                android:layout_width="2dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/text_color_on_darkest_grey" />
            <EditText
                android:id="@+id/id_invite_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:background="@null"
                android:hint="@string/number"
                android:inputType="phone"
                android:digits="1234567890"
                android:maxLength="15"
                android:padding="15dip"
                android:singleLine="true"
                android:textColor="@color/text_color_grayblack"
                android:textSize="15sp"
                android:textStyle="normal" 
                android:layout_weight="10"/>
</LinearLayout>
<View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/dark_gray" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dip" >
			    <Button
                    android:id="@+id/id_cancel_btn"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="5dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@id/id_add"
                    android:background="@drawable/round_rect_blue"
                    android:text="@string/cancel_large"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/header_color"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/id_invite_btn"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/round_rect_blue"
                    android:text="@string/invite_large"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/header_color"
                    android:textSize="16sp" />

                
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>