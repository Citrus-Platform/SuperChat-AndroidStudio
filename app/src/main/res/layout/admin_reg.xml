            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal" 
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            />

		<View
		    	android:id="@+id/view_password"
		        android:layout_width="fill_parent"
