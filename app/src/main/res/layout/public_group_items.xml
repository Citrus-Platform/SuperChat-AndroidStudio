<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="3.0dip" >

    <com.superchat.widgets.RoundedImageView
        android:id="@+id/contact_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:padding="1dp"
         android:layout_marginLeft="10dip"
        android:src="@drawable/avatar" />
    <com.superchat.widgets.RoundedImageView
        android:id="@+id/contact_icon_default"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:src="@drawable/chat_person" />
<com.superchat.widgets.MyriadRegularTextView
            android:id="@+id/id_unseen_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
             android:layout_alignParentRight="true"
            android:background="@drawable/bubble"
            android:layout_marginRight="20dip"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="9.0sp"
            android:visibility="gone" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20.0dip"
        android:layout_toRightOf="@id/contact_icon"
        android:layout_toLeftOf="@+id/id_remove_member"
        android:orientation="vertical" >

        <com.superchat.widgets.MyriadRegularTextView
            android:id="@+id/id_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="Aaret"
            android:textColor="@color/text_color_grayblack"
            android:textSize="20.0sp"
            android:textStyle="bold" />
 		<com.superchat.widgets.MyriadRegularTextView
            android:id="@+id/id_member_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="Members(0)"
            android:textColor="@color/text_color_grayblack"
            android:textSize="13.0sp" />
        <com.superchat.widgets.MyriadRegularTextView
            android:id="@+id/id_contact_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/i_am_on_superchat"
            android:textColor="@color/text_color_grayblack"
            android:textSize="13.0sp" />
    </LinearLayout>

   <CheckBox
            android:id="@+id/contact_sel_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
           android:layout_marginRight="10dip"
            android:button="@drawable/custom_check_box"
            android:visibility="gone" />
   <CheckBox
            android:id="@+id/id_owner_choose"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/contact_sel_box"
             android:layout_gravity="center_vertical"
           android:layout_marginRight="30dip"
            android:button="@drawable/custom_radio_button"
            android:visibility="gone" />
   <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
           android:layout_marginRight="20dip"
           android:layout_marginTop="40dip"
           android:layout_marginBottom="40dip"
           android:src="@drawable/join_btn"
            android:visibility="gone" />
   
   <RelativeLayout  android:id="@+id/id_leave_join"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/round_rect_blue"
	        android:layout_centerVertical="true"
	         android:layout_alignParentRight="true"
	         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <com.superchat.widgets.MyriadRegularTextView
               
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/join_a_su_group1"
                android:textColor="@color/white"
                android:textSize="12sp" >
            </com.superchat.widgets.MyriadRegularTextView>
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/id_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:padding="15dip"
        android:layout_centerVertical="true"
        android:background="@drawable/cross"
        android:visibility="gone" />

</RelativeLayout>